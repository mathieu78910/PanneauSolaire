<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CLAMMO_PanneauSolaire.InclinationPage"
             Title="Inclinaison"
             BackgroundColor="#282b30">
    <StackLayout Padding="20">
        <Label Text="Inclinaison du panneau"
               FontSize="22"
               HorizontalOptions="Center"
               TextColor="White" />
        <Label x:Name="InclinationLabel"
               Text="Inclinaison : ..."
               FontSize="18"
               HorizontalOptions="Center"
               Margin="20"
               TextColor="White"/>
        <Button Text="Obtenir inclinaison"
                BackgroundColor="#03A9F4"
                TextColor="White"
                Clicked="OnInclinationClicked"/>
    </StackLayout>
</ContentPage>
