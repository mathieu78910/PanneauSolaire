<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CLAMMO_PanneauSolaire.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CLAMMO_PanneauSolaire"
    Shell.FlyoutBehavior="Disabled"
    Title="CLAMMO_PanneauSolaire"
    TitleColor="White">
    <TabBar>
        <Tab Title="Géolocalisation" Icon="localisation.png">
            <ShellContent ContentTemplate="{DataTemplate local:GeolocationPage}" Route="GeolocalisationPage"/>
        </Tab>
        <Tab Title="Inclinaison" Icon="Images/tilt.png">
            <ShellContent ContentTemplate="{DataTemplate local:InclinationPage}" Route="InclinationPage"/>
        </Tab>
        <Tab Title="Boussole" Icon="Ressources/Images/boussole.png">
            <ShellContent ContentTemplate="{DataTemplate local:CompassPage}" Route="CompassPage"/>
        </Tab></TabBar>
    <ShellContent 
        Title="Géolocalisation"
        Icon="localisation.png"
        ContentTemplate="{DataTemplate local:GeolocationPage}"
        Route="GeolocalisationPage"/>
     <ShellContent
         Title="Inclinaison"
         Icon="Images/tilt.png"
         ContentTemplate="{DataTemplate local:InclinationPage}"
         Route="InclinationPage"/>
    <ShellContent
        Title="Boussole"
        Icon="Ressources/Images/boussole.png"
        ContentTemplate="{DataTemplate local:CompassPage}" 
        Route="CompassPage"/>
</Shell>
